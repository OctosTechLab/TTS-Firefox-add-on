{
  "manifest_version": 2,
  "name": "TTS - NL, EN",
  "version": "1.0.0",
  "description": "Adds a red border to all webpages on srcmake.com",
  "icons": {
    "48": "img/W-tts.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts.js"]
    }
  ],

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "img/W-tts.png"
    },
    "default_title": "TTS - NL, EN",
    "default_popup": "/popup.html"
  },

  "permissions": ["storage"]
}
